<% provide :title, t("all_category") %>
<h1><%= t("all_category") %> </h1>
<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr class="info">
          <th class="text-center"><%= t("id") %></th>
          <th class="text-center"><%= t("category") %></th>
          <th class="text-center"></th>
          <th class="text-center"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
        <%= will_paginate  %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4 col-md-offset-1 margin_top">
    <%= link_to t("new_category"), new_admin_category_path, class: "btn btn-primary" %>
  </div>
</div>
