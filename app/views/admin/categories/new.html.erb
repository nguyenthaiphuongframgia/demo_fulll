
<% provide :title, t("create_category") %>
<h1 class="col-md-8 col-md-offset-3"><%= t("create_category") %></h1>
<div class="row">
  
  <div class="col-md-4">
    <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      <%= f.submit t("create_category"), class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
  </div>
