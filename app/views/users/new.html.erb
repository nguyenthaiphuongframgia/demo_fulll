
<div class="container">
  <div class="row main">
    <div class="main-login main-center">
      <h2>Sign up </h2>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"> </i></span>
                <%= f.text_field :name, class: "form-control ", required: true %>
              </div>
            </div>
        </div>
        <div class="form-group">
          <%= f.label :phone, class: "cols-sm-2 control-label" %>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
              <%= f.text_field :phone, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "cols-sm-2 control-label" %>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :address, class: "cols-sm-2 control-label" %>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.text_field :address, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "cols-sm-2 control-label" %>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "cols-sm-2 control-label" %>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= f.password_field :password_confirmation, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="form-group ">
          <%= f.submit t("signup"), class: "btn btn-primary btn-lg btn-block login-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


