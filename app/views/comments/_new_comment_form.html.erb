<%= form_for @product.comments.build, html: {multipart: true},
  remote: true do |f| %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("review.new_comment"),
      id: "comment_content_field-#{@product.id}" %>
  </div>
  <div><%= f.hidden_field :product_id, value: @product.id %></div>
  <%= f.submit t("review.lb"), class: "btn btn-primary" %>
<% end %>
